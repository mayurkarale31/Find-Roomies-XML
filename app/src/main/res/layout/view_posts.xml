<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/postImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/roomOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/room_owner"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/postImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roomAddress"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/roomOwnerName"
        app:layout_constraintLeft_toRightOf="@id/postImage"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/room_location"
        android:drawablePadding="2dp"/>

    <TextView
        android:id="@+id/roomRent"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/roomAddress"
        app:layout_constraintLeft_toRightOf="@id/postImage"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:drawableLeft="@drawable/room_rent"
        android:drawablePadding="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>